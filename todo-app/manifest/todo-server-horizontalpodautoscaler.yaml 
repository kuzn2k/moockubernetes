apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  namespace: project
  name: todo-server-hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: todo-server
  minReplicas: 1
  maxReplicas: 5
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 50
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: 80
  behavior:
    scaleDown:
      stabilizationWindowSeconds: 120
---
apiVersion: policy/v1beta1
kind: PodDisruptionBudget
metadata:
  name: todo-server-pdb
spec:
  maxUnavailable: 30%
  selector:
    matchLabels:
      app: todo-server
